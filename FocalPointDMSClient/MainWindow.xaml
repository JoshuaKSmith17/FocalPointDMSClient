<Window x:Class="FocalPointDMSClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocalPointDMSClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1440">
    <Grid Height="884" VerticalAlignment="Top">
        <Button 
            Name="SubmitButton" 
            Click="SubmitButton_Click"
            Content="Customers" 
            Margin="10,10,0,849"
            HorizontalAlignment="Left"
            Width="130"
            />

        <TextBox 
            Name="TestBox" 
            Text="TextBox" 
            TextWrapping="Wrap" Margin="10,759,10,10"
            />

        <DataGrid 
            Name="ViewDataGrid" 
            ItemsSource="{Binding Path=MainDataView}" 
            AutoGenerateColumns="True"
            Margin="0,10,0,130" HorizontalAlignment="Right" Width="1295"
            />

    </Grid>
</Window>
